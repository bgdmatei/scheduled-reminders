<p id="notice"><%= notice %></p>
<h1> Welcome <%= current_user.email %></h1>

<div class="container">
<% if @reminders.empty? %>
      You have no reminders
<% else %>
   <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="6"></th>
    </tr>
  </thead>
    
  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.title %></td>
        <td><%= reminder.description %></td>
        <td><%= reminder.date_scheduled %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Delete', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
</div>

<%= link_to "Add reminder", new_reminder_path %>